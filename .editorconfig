# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
tab_width = 4
indent_size = 4
indent_style = space
insert_final_newline = true
end_of_line = lf
max_line_length = off
trim_trailing_whitespace = true

[*.{css,html,js,jsx,json,less,scss,ts,tsx,vue,xml,xsd,yaml,yml}]
tab_width = 2
indent_size = 2

[{M,m}akefile]
tab_width = 4
indent_size = 4
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.properties]
charset = latin1
